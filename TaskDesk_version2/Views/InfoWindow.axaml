<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TaskDesk_version2.Views.InfoWindow"
        Title="Info"
        CanResize="False"
        CanMaximize="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
        
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Name="InfoMassageBlock" TextWrapping="Wrap" Padding="10" MaxWidth="600" FontSize="16"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button Name="OkButton" Content="OK" Width="50" HorizontalAlignment="Center" IsDefault="True"/>
                        <Button Name="CancelButton" Content="Cancel" Width="50" IsVisible="False" HorizontalAlignment="Center"/>
                </StackPanel>
        </Grid>
        
</Window>