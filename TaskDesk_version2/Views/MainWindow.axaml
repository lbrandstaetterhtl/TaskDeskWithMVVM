<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TaskDesk_version2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:TaskDesk_version2.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TaskDesk_version2.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="TaskDesk_version2"
        WindowState="Maximized">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Menu x:Name="RootMenu" Grid.Row="0" Grid.Column="0">
            <MenuItem x:Name="TasksMenuItem" Header="Tasks">
                <MenuItem x:Name="AddTaskMenuItem" Header="Add Task"/>
            </MenuItem>
            
            <MenuItem x:Name="UsersMenuItem" Header="Users">
                <MenuItem x:Name="AddUserMenuItem" Header="Add User"/>
            </MenuItem>
        </Menu>
        
        <Grid Grid.Row="1" Grid.Column="0" x:Name="TasksPlusHeader">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Border Padding="8" Margin="4" Background="#1E1E1E" BorderBrush="White">
            <StackPanel Grid.Row="0" Name="Header" Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Title" FontWeight="Bold" Width="150"/>
                <TextBlock Text="Description" FontWeight="Bold" Width="150"/>
                <TextBlock Text="Due Date" FontWeight="Bold" Width="150"/>
                <TextBlock Text="Users" FontWeight="Bold" Width="150"/>
                <TextBlock Text="Groups" FontWeight="Bold" Width="150"/>
                <TextBlock Text="State" FontWeight="Bold" Width="150"/>
            </StackPanel>
            </Border>
            
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Tasks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8" Margin="4" Background="#1E1E1E" BorderBrush="White" Name="TaskBorder" DoubleTapped="TaskDoubleClick">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="{Binding Title}" Width="150"/>
                                <TextBlock Text="{Binding Description}" Width="150"/>
                                <TextBlock Text="{Binding DateAsString}" Width="150"/>
                                <TextBlock Text="{Binding UsersAsString}" Width="150"/>
                                <TextBlock Text="{Binding GroupsAsString}" Width="150"/>
                                <TextBlock Text="{Binding StateAsString}" Width="150"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
        </Grid>
    </Grid>

</Window>
