<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TaskDesk_version2.Views.ErrorWindow"
        Title="ERROR"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
        
        <StackPanel x:Name="Root">
                <TextBlock x:Name="ErrorMassageBlock" TextWrapping="Wrap" Padding="10" MaxWidth="500" Foreground="Red" FontSize="16"/>
                
                <Button x:Name="OkButton" Content="OK" Width="50" HorizontalAlignment="Center" IsDefault="True"/>
        </StackPanel>
        
</Window>