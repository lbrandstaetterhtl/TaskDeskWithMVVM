<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TaskDesk_version2.ViewModels"
        x:Class="TaskDesk_version2.Views.ErrorWindow"
        Title="Task"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
        
        <StackPanel x:Name="Root">
                <TextBlock x:Name="ErrorMassageBlock" TextWrapping="Wrap" Padding="10" Width="300" MaxWidth="300" Foreground="Red" FontSize="16"/>
                
                <Button x:Name="OkButton" Content="OK" Width="40" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
        
</Window>